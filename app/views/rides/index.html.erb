<h1 align='center'>Rides</h1>
<div class = "container">
<h2>My Rides</h2>

	<% if current_user.rides.empty? %>
	<strong> You have no rides yet :( </strong>
	<% else %>
	<p>
	<% current_user.rides.order(:datetime).each do |ride| %>
	 
	<div class = "row" >
	<div class="col-lg-6 col-md-6 ">
		From: <strong><%= ride.startloc %></strong> to <strong><%= ride.finishloc %></strong> <br>
		At: <strong><%= ride.datetime %> </strong>
	</div>
	<div class="col-lg-6 col-md-6 text-right">	

	<% if ride.driverid == current_user.id %>
		<%= link_to '<i class="fa fa-trash-o fa-lg"></i>'.html_safe + " " + 'Delete', ride, :method => :delete, data: {confirm: "Are you sure you want to delete this ride?"} %>
		<%= button_to 'Edit', edit_ride_path(ride), :method => :get %>
	<% end %>
		<%= link_to 'More Info', ride_path(ride) %>
		</div>
	</div>
	<hr>
	
	
	<% end %>
	</div>
	</p>
	<%end %>


<div class = "container"> 
<h2>All Rides</h2>

	<% if @rides.empty? %>
	<strong> No Rides yet :( </strong>
	<% else %>
	<% @rides.each do |ride| %>
	<p>
	
	<div class = "row" >
		<div class="col-lg-6 col-md-6 ">
		From: <strong><%= ride.startloc %></strong> to <strong><%= ride.finishloc %></strong> <br>
		At: <strong><%= ride.datetime %> </strong>	
		</div>
		<div class="col-lg-3 col-md-6 text-right">
		Remaining seats:<%= ride.pcount %><br>
		</div>
		<div class="col-lg-3 col-md-6 text-right">
		<% if ride.users.include?(current_user) %>
			You've already signed up for this ride!
		<% else %>
			<%= form_tag signup_ride_path(ride) do %>
  			<%= text_field_tag "count", "1" %>
  			<%= submit_tag "Sign Up" %>
  			<% end %>
		<% end %>
		<%= link_to 'More Info', ride_path(ride) %>
		</div>		
	</div>
	<hr>
	
	
	
	<% end %>
	</div>
	</p>
	<% end %>
