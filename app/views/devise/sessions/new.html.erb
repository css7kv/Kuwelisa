<div class="container-full">

      <div class="row">
       
        <div class="col-lg-12 text-center v-center">
          
          <h1>Welcome to Kuwelisa</h1>
          <p class="lead">Log in below!</p>
          
          <br>
          
      
        </div>
        
      </div> <!-- /row -->

       <div class="row", align='center'>

            <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal' }) do |f| %>
                <%= devise_error_messages! %>

                <div class="col-lg-offset-4 col-lg-4 col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6 col-xs-offset-1 col-xs-10">
        
                <div class="field">
                  <%= f.input :phone, placeholder: "Phone number" %><br />
                </div>

                <div class="field">
                  <%= f.input :password, placeholder: "Password" %><br />
                </div>

                <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end -%>

                <div class="actions">
                  <%= f.button :submit, "Log in" %>
                </div>
            <% end %>

          <%= render "devise/shared/links" %>

       
      </div>
</div>



                