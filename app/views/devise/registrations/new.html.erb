<header>
    <div class="header-content">
        <div class="header-content-inner" align='center'>

            <h1>Sign Up</h1>

              
              <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal' }) do |f| %>
                <%= devise_error_messages! %>

                <div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6 col-xs-12">

                <div class="field">
                  <%= f.input :phone, label: "Phone number:" %><br />
                </div>

                <div class="field">
                  <%= f.input :firstname, label: "First name" %><br />
                </div>

                <div class="field">
                  <%= f.input :lastname, label: "Last name" %><br />
                </div>

                <div class="field">
                  <%= f.input :township, collection: ["Khayelitsha", "Mitchell's Plain", "Guguletu"] %><br />
                </div>
          
                <div class="field">
                  <%= f.input :password %>
                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                </div>

                <div class="field">
                  <%= f.input :password_confirmation %><br />
                </div>

                <div class="actions">
                  <%= f.button :submit, "Sign up" %>
                </div>
              <% end %>



            <%= render "devise/shared/links" %>

            </div>

        </div>
      </div>
</header>
